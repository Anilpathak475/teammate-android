<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/single_margin"
    android:layout_marginRight="@dimen/single_margin"
    android:layout_marginTop="@dimen/single_margin"
    android:background="?attr/selectableItemBackground">

    <View
        android:id="@+id/left_guide"
        android:layout_width="@dimen/single_margin"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/triple_margin"
        android:contentDescription="@string/image_description"
        android:layout_height="@dimen/triple_margin"
        android:background="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="@+id/content"
        app:layout_constraintLeft_toRightOf="@+id/left_guide"
        app:layout_constraintRight_toLeftOf="@+id/content" />

    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/half_margin"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/small_text"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintRight_toLeftOf="@+id/right_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <View
        android:id="@+id/right_guide"
        android:layout_width="@dimen/single_margin"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/content"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/left_guide"
        app:layout_constraintTop_toBottomOf="@+id/content" />
</android.support.constraint.ConstraintLayout>