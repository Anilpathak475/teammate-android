<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/half_margin"
    android:layout_marginLeft="@dimen/single_margin"
    android:layout_marginRight="@dimen/single_margin"
    app:strokeColor="@color/colorPrimary"
    android:layout_marginTop="@dimen/half_margin"
    app:cardCornerRadius="@dimen/half_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_margin">

        <ImageView
            android:id="@+id/home_thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/half_margin"
            android:background="@color/dark_grey"
            android:contentDescription="@string/team_logo"
            app:layout_constraintBottom_toBottomOf="@+id/score"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintRight_toLeftOf="@+id/score"
            app:layout_constraintTop_toTopOf="@+id/score" />

        <ImageView
            android:id="@+id/away_thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/half_margin"
            android:background="@color/dark_grey"
            android:contentDescription="@string/team_logo"
            app:layout_constraintBottom_toBottomOf="@+id/score"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintLeft_toRightOf="@+id/score"
            app:layout_constraintTop_toTopOf="@+id/score" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_box"
            android:backgroundTint="@color/colorAccent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/quarter_margin"
            android:paddingLeft="@dimen/single_margin"
            android:paddingRight="@dimen/single_margin"
            android:paddingTop="@dimen/quarter_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2:0" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/third_margin"
            android:layout_marginTop="@dimen/third_margin"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/third_margin"
            android:paddingTop="@dimen/third_margin"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/small_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/home_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hi I'm some very interesting text. I'm interesting because I say I am, which is quite nice" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/away"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/third_margin"
            android:layout_marginTop="@dimen/third_margin"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/third_margin"
            android:paddingTop="@dimen/third_margin"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/small_text"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/away_thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hi I'm some very interesting text. I'm interesting because I say I am, which is quite nice" />

        <TextView
            android:id="@+id/ended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_ended"
            android:textColor="@color/dark_grey"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="hi" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/quarter_margin"
            android:text="@string/game_ended"
            android:textColor="@color/dark_grey"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="hi" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.card.MaterialCardView>